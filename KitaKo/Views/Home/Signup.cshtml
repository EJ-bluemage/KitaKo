@model KitaKo.Models.SignupViewModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-orange-50 flex">
    <!-- Left side -->
    <div class="w-8/12 relative bg-[#fde6cf] overflow-hidden">

        <!-- Red and White -->
        <div class="absolute top-0 left-0 w-full flex z-50">
            <div class="flex-1 h-40 bg-red-500 rounded-b-full"></div>
            <div class="flex-1 h-40 bg-white rounded-b-full"></div>
            <div class="flex-1 h-40 bg-red-500 rounded-b-full"></div>
            <div class="flex-1 h-40 bg-white rounded-b-full"></div>
            <div class="flex-1 h-40 bg-red-500 rounded-b-full"></div>
        </div>

        <!-- KitaKo Logo -->
        <h1 class="absolute inset-0 flex items-center justify-center
               text-5xl font-bold text-red-500 tracking-wide z-10">
            KitaKo
        </h1>

        <!-- Brown vertical -->
        <div class="absolute bottom-40 w-full flex justify-center items-end">
            <div class="w-14 h-[32rem] bg-[#d79a4d] mx-24"></div>
            <div class="w-14 h-[32rem] bg-[#d79a4d] mx-24"></div>
            <div class="w-14 h-[32rem] bg-[#d79a4d] mx-24"></div>
            <div class="w-14 h-[32rem] bg-[#d79a4d] mx-24"></div>
        </div>

        <!-- Brown bottom -->
        <div class="absolute bottom-0 w-full h-40 bg-[#d79a4d]"></div>
    </div>

    <!-- Right Side - Signup Form (35%) -->
    <div class="w-4/12 bg-white flex items-center justify-center p-12">
        <div class="w-full max-w-sm">
            <!-- Header -->
            <div class="text-center mb-8">
                <h2 class="text-red-600 font-semibold text-xl mb-2">SIGN UP</h2>
                <p class="text-gray-600 text-sm">Create your KitaKo account</p>
            </div>

            <!-- Error Messages -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
                    @Html.ValidationSummary(false, "", new { @class = "text-sm" })
                </div>
            }

            <!-- Signup Form -->
            <form method="post" asp-action="Signup" asp-controller="Home">
                <div class="space-y-4">
                    <div>
                        <label for="Username" class="block text-red-600 text-sm font-medium mb-2">
                            Username
                        </label>
                        <input type="text"
                               id="Username"
                               name="Username"
                               asp-for="Username"
                               class="w-full px-4 py-2.5 rounded bg-orange-50 border border-orange-100 focus:outline-none focus:border-red-300"
                               placeholder="Choose a username"
                               required />
                    </div>

                    <div>
                        <label for="Email" class="block text-red-600 text-sm font-medium mb-2">
                            Email
                        </label>
                        <input type="email"
                               id="Email"
                               name="Email"
                               asp-for="Email"
                               class="w-full px-4 py-2.5 rounded bg-orange-50 border border-orange-100 focus:outline-none focus:border-red-300"
                               placeholder="Enter your email"
                               required />
                    </div>

                    <div>
                        <label for="Password" class="block text-red-600 text-sm font-medium mb-2">
                            Password
                        </label>
                        <input type="password"
                               id="Password"
                               name="Password"
                               asp-for="Password"
                               class="w-full px-4 py-2.5 rounded bg-orange-50 border border-orange-100 focus:outline-none focus:border-red-300"
                               placeholder="Create a password"
                               required />
                    </div>

                    <div>
                        <label for="ConfirmPassword" class="block text-red-600 text-sm font-medium mb-2">
                            Confirm Password
                        </label>
                        <input type="password"
                               id="ConfirmPassword"
                               name="ConfirmPassword"
                               asp-for="ConfirmPassword"
                               class="w-full px-4 py-2.5 rounded bg-orange-50 border border-orange-100 focus:outline-none focus:border-red-300"
                               placeholder="Confirm your password"
                               required />
                    </div>

                    <!-- Sign Up Button -->
                    <div class="pt-2">
                        <button type="submit"
                                class="w-full bg-red-600 hover:bg-red-700 text-white font-medium py-2.5 rounded transition transform hover:scale-105">
                            CREATE ACCOUNT
                        </button>
                    </div>
                </div>
            </form>

            <!-- Login Link -->
            <div class="mt-6 text-center">
                <p class="text-gray-600 text-sm">
                    Already have an account?
                    <a href="@Url.Action("Login", "Home")" class="text-red-600 hover:text-red-700 font-medium">
                        LOG IN
                    </a>
                </p>
            </div>

            <!-- Back to Home -->
            <div class="mt-4 text-center">
                <a href="@Url.Action("Index", "Home")" class="text-gray-500 hover:text-gray-700 text-sm">
                    ← Back to Home
                </a>
            </div>
        </div>
    </div>
</div>