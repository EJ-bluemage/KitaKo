@{
    ViewData["Title"] = "Sales & Budget";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-orange-50">
    <!-- Sidebar Navigation (Same as Dashboard) -->
    <div class="w-20 bg-gradient-to-b from-orange-500 to-orange-600 h-screen fixed left-0 top-0 flex flex-col items-center py-6 shadow-xl z-50">
        <div class="mb-8">
            <h2 class="text-white text-2xl font-bold">K</h2>
        </div>

        <button onclick="openSaleModal()"
                class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-orange-500 hover:scale-110 transition-transform mb-6 shadow-lg">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
        </button>

        <a href="@Url.Action("Dashboard", "Home")"
           class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 text-white hover:bg-white/20">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
        </a>

        <a href="@Url.Action("SalesTracker", "Home")"
           class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 bg-white text-orange-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
        </a>

        <a href="@Url.Action("UtangLogs", "Home")"
           class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 text-white hover:bg-white/20">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
        </a>

        <a href="@Url.Action("ExpensePriority", "Home")"
           class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 text-white hover:bg-white/20">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
        </a>

        <div class="mt-auto">
            <button class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center text-white hover:bg-white/30 transition-all">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="ml-20 p-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-8">Sales & Budget</h1>

        <!-- Period Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl p-6 shadow-lg text-white">
                <h3 class="text-lg font-semibold mb-4">Daily</h3>
                <p class="text-3xl font-bold mb-2" id="dailySales">₱0.00</p>
                <p class="text-blue-100" id="dailyProfit">Profit: ₱0.00</p>
                <p class="text-sm text-blue-100 mt-2" id="dailyCount">0 sales</p>
            </div>

            <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl p-6 shadow-lg text-white">
                <h3 class="text-lg font-semibold mb-4">Weekly</h3>
                <p class="text-3xl font-bold mb-2" id="weeklySales">₱0.00</p>
                <p class="text-purple-100" id="weeklyProfit">Profit: ₱0.00</p>
                <p class="text-sm text-purple-100 mt-2" id="weeklyCount">0 sales</p>
            </div>

            <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl p-6 shadow-lg text-white">
                <h3 class="text-lg font-semibold mb-4">Monthly</h3>
                <p class="text-3xl font-bold mb-2" id="monthlySales">₱0.00</p>
                <p class="text-orange-100" id="monthlyProfit">Profit: ₱0.00</p>
                <p class="text-sm text-orange-100 mt-2" id="monthlyCount">0 sales</p>
            </div>
        </div>

        <!-- Sales History Table -->
        <div class="bg-white rounded-xl p-6 shadow-md">
            <h3 class="text-xl font-bold mb-4">All Sales History</h3>

            <div id="salesHistoryTable">
                <p class="text-gray-400 text-center py-12">No sales recorded yet</p>
            </div>
        </div>
    </div>
</div>

<!-- Sale Modal (Reuse from Dashboard) -->
<div id="saleModal" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4 hidden">
    <div class="bg-white rounded-2xl p-8 max-w-md w-full shadow-2xl">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-gray-800">Add Sale</h3>
            <button onclick="closeSaleModal()" class="text-gray-400 hover:text-gray-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Sale Amount (₱)</label>
                <input type="number" id="saleAmount" step="0.01" placeholder="0.00"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Profit (₱)</label>
                <input type="number" id="saleProfit" step="0.01" placeholder="0.00"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Description (Optional)</label>
                <input type="text" id="saleDescription" placeholder="Item description"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
            </div>

            <button onclick="addSale()"
                    class="w-full bg-orange-500 text-white py-3 rounded-lg font-semibold hover:bg-orange-600 transition-colors">
                Add Sale
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            updateSalesTracker();
        });
    </script>
}
