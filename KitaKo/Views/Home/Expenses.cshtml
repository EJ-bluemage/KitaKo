@{
    ViewData["Title"] = "Expenses Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-orange-50">
    <!-- Sidebar Navigation -->
    <div class="w-20 bg-gradient-to-b from-orange-500 to-orange-600 h-screen fixed left-0 top-0 flex flex-col items-center py-6 shadow-xl z-50">
        <div class="mb-8">
            <h2 class="text-white text-2xl font-bold">K</h2>
        </div>

        <button onclick="openSaleModal()"
                class="w-12 h-12 bg-white rounded-full flex items-center justify-center text-orange-500 hover:scale-110 transition-transform mb-6 shadow-lg">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
        </button>

        <a href="@Url.Action("Dashboard", "Home")"
           class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 text-white hover:bg-white/20">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
        </a>

        <a href="@Url.Action("SalesTracker", "Home")"
           class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 text-white hover:bg-white/20">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
        </a>

        <a href="@Url.Action("UtangLogs", "Home")"
           class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 text-white hover:bg-white/20">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
        </a>

        <div class="mt-auto">
            <button class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center text-white hover:bg-white/30 transition-all">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="ml-20 p-8">
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-4xl font-bold text-gray-800">Store Expense Management</h1>
            </div>
            <div class="flex items-center gap-3">
                <button onclick="openExpenseModal()"
                        class="bg-orange-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-orange-600 transition-colors flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Add Expense
                </button>
            </div>
        </div>

        <!-- Budget Card -->
        <div class="bg-gradient-to-r from-purple-500 to-purple-600 rounded-2xl p-6 mb-8 text-white shadow-lg">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-purple-100 text-sm">Available Budget</p>
                    <p class="text-4xl font-bold" id="availableBudget">₱0.00</p>
                </div>
                <div class="flex gap-3">
                    <button onclick="updateBudget()"
                            class="bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg transition-colors">
                        Update Budget
                    </button>
                    <button onclick="clearExpensesAndBudget()"
                            class="bg-white/10 hover:bg-white/20 px-4 py-2 rounded-lg transition-colors">
                        Reset
                    </button>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl p-6 shadow-md">
                <p class="text-gray-500 text-sm mb-2">Total Unpaid</p>
                <p class="text-3xl font-bold text-red-600" id="totalUnpaid">₱0.00</p>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-md">
                <p class="text-gray-500 text-sm mb-2">Optimized Cost</p>
                <p class="text-3xl font-bold text-blue-600" id="optimizedCost">₱0.00</p>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-md">
                <p class="text-gray-500 text-sm mb-2">Unpaid Items</p>
                <p class="text-3xl font-bold text-orange-600" id="unpaidCount">0</p>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-md">
                <p class="text-gray-500 text-sm mb-2">Paid Items</p>
                <p class="text-3xl font-bold text-green-600" id="paidCount">0</p>
            </div>
        </div>

        <!-- Expenses Table (moved above recommendation) -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden mb-8">
            <div class="p-6 border-b border-gray-200">
                <h3 class="text-xl font-bold text-gray-800">All Expenses</h3>
            </div>

            <div id="expensesTableContainer">
                <!-- Will be populated by JavaScript -->
            </div>
        </div>

        <!-- Recommendation Card -->
        <div id="aiRecommendation" class="bg-gradient-to-r from-blue-500 to-indigo-600 rounded-2xl p-6 mb-8 text-white shadow-lg">
            <!-- Will be populated by JavaScript -->
        </div>
    </div>
</div>

<!-- Add Expense Modal -->
<div id="expenseModal" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4 hidden">
    <div class="bg-white rounded-2xl p-8 max-w-md w-full shadow-2xl">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-gray-800">Add Expense</h3>
            <button onclick="closeExpenseModal()" class="text-gray-400 hover:text-gray-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Expense Name</label>
                <input type="text" id="expenseName" placeholder="e.g., Water Bill"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Amount (₱)</label>
                <input type="number" id="expenseAmount" step="0.01" placeholder="0.00"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Due Date</label>
                <input type="date" id="expenseDueDate"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Priority: <span id="priorityDisplay">★★★☆☆ (3/5)</span>
                </label>
                <input type="range" id="expensePriority" min="1" max="5" value="3"
                       oninput="updatePriorityDisplay(this.value)"
                       class="w-full" />
                <div class="flex justify-between text-xs text-gray-500 mt-1">
                    <span>Low</span>
                    <span>High</span>
                </div>
            </div>

            <button onclick="addExpense()"
                    class="w-full bg-orange-500 text-white py-3 rounded-lg font-semibold hover:bg-orange-600 transition-colors">
                Add Expense
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            updateExpensesPage();
        });
    </script>
}