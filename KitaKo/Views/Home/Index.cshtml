@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-orange-400 via-pink-400 to-red-400 flex items-center justify-center p-4">
    <div class="text-center animate-fade-in">
        <h1 class="text-8xl md:text-9xl font-bold text-white mb-4 tracking-tight drop-shadow-2xl">
            KitaKo
        </h1>
        <p class="text-2xl md:text-3xl text-white/90 mb-12 font-light">
            Track Your Sales, Grow Your Business
        </p>
        <a href="@Url.Action("Dashboard", "Home")"
           class="inline-block bg-white text-orange-500 px-12 py-4 rounded-full text-xl font-semibold hover:scale-105 transform transition-all duration-300 shadow-2xl">
            Get Started →
        </a>
    </div>
</div>

<style>
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .animate-fade-in {
        animation: fadeIn 0.8s ease-out;
    }
</style>
