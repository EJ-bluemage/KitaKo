@model KitaKo.Models.User
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-orange-50 flex">
    <!-- Sidebar -->
    <div class="w-20 bg-gradient-to-b from-orange-500 to-orange-600 h-screen fixed left-0 top-0 flex flex-col items-center py-6 shadow-xl z-50">
        <div class="mb-8">
            <h2 class="text-white text-2xl font-bold">K</h2>
        </div>

        <a href="@Url.Action("Dashboard", "Home")" class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 text-white hover:bg-white/20">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
        </a>

        <a href="@Url.Action("SalesTracker", "Home")" class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 text-white hover:bg-white/20">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
        </a>

        <a href="@Url.Action("UtangLogs", "Home")" class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 text-white hover:bg-white/20">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
        </a>

        <a href="@Url.Action("Expenses", "Home")" class="w-12 h-12 rounded-xl flex items-center justify-center mb-4 text-white hover:bg-white/20">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2zM10 8.5a.5.5 0 11-1 0 .5.5 0 011 0zm5 5a.5.5 0 11-1 0 .5.5 0 011 0z"></path>
            </svg>
        </a>

        <div class="mt-auto">
            <a href="@Url.Action("Profile", "Home")" class="w-12 h-12 rounded-full bg-white flex items-center justify-center text-orange-500 shadow-lg">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="ml-20 flex-1 flex flex-col">
        <!-- Header -->
        <div class="bg-gradient-to-r from-orange-400 to-pink-400 px-8 py-6">
            <h1 class="text-3xl font-bold text-white">KitaKo</h1>
        </div>

        <!-- Profile Content -->
        <div class="flex-1 bg-white p-8 flex items-center justify-center">
            <div class="w-full max-w-2xl bg-white rounded-xl shadow-lg p-8">
                <h2 class="text-2xl font-bold text-red-600 mb-8">Profile</h2>

        <!-- Profile Picture and Name -->
                <div class="flex items-center mb-8">
                    <div class="relative">
                        @if (!string.IsNullOrEmpty(Model.ProfilePhotoUrl))
                        {
                            <img src="@Model.ProfilePhotoUrl" alt="Profile" class="w-32 h-32 rounded-full object-cover border-4 border-orange-500">
                        }
                        else
                        {
                            <div class="w-32 h-32 rounded-full bg-gradient-to-br from-orange-400 to-pink-400 flex items-center justify-center border-4 border-orange-500">
                                <svg class="w-20 h-20 text-white" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                                </svg>
                            </div>
                        }
                    </div>
                    <div class="ml-6 flex-1">
                        <h3 class="text-xl font-semibold">@Model.Username</h3>
                        <a href="@Url.Action("EditProfile", "Home")" class="text-sm text-orange-500 hover:text-orange-600 font-medium">Edit</a>
                    </div>
                </div>

                <!-- Profile Options -->
                <div class="space-y-3">
                    <a href="@Url.Action("EditProfile", "Home")" class="block bg-orange-50 hover:bg-orange-100 px-6 py-4 rounded-lg transition">
                        <span class="font-medium">Store Name</span>
                        <p class="text-sm text-gray-600">@(string.IsNullOrEmpty(Model.StoreName) ? "Not set" : Model.StoreName)</p>
                    </a>

                    <a href="@Url.Action("About", "Home")" class="block bg-orange-50 hover:bg-orange-100 px-6 py-4 rounded-lg transition">
                        <span class="font-medium">About</span>
                    </a>

                    <a href="@Url.Action("Logout", "Home")" class="block bg-orange-50 hover:bg-red-100 px-6 py-4 rounded-lg transition text-red-600">
                        <span class="font-medium">Log out</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
